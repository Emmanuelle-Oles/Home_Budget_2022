<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="UniformGrid" x:Name="BackgroundColor">
        <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
    </Style>
    <Style TargetType="Button" x:Name="ButtonColor">
        <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
    </Style>
    <Style TargetType="ListBox" x:Name="ListBoxColor">
        <Setter Property="Background" Value="{StaticResource TertiaryColor}"/>
    </Style>
    
    <!--<Style TargetType="Menu" x:Name="MenuColor" >
        <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
    </Style>-->
</ResourceDictionary>